{
  "name": "buildit",
  "version": "1.0.0",
  "private": true,
  "description": "Privacy-first organizing platform for activist groups",
  "workspaces": [
    "clients/web",
    "clients/web/packages/*",
    "clients/web/apps/*",
    "workers/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "cd clients/web && bun run dev",
    "build": "cd clients/web && bun run build",
    "test": "cd clients/web && bun run test",
    "typecheck": "cd clients/web && bun run typecheck",
    "codegen": "cd tools/codegen && bun run generate",
    "codegen:validate": "cd tools/codegen && bun run validate",
    "i18n:codegen": "cd tools/i18n-codegen && bun run generate",
    "i18n:validate": "cd tools/i18n-codegen && bun run validate",
    "test:all": "bun run test && cd tools/codegen && bun run validate",
    "desktop:dev": "cd clients/desktop && cargo tauri dev",
    "desktop:build": "cd clients/desktop && cargo tauri build",
    "workers:dev:api": "cd workers/api && bun run dev",
    "workers:dev:relay": "cd workers/relay && bun run dev",
    "workers:dev:ssr": "cd workers/ssr && bun run dev",
    "workers:deploy:api": "cd workers/api && bun run deploy",
    "workers:deploy:relay": "cd workers/relay && bun run deploy",
    "workers:deploy:ssr": "cd workers/ssr && bun run deploy",
    "workers:dev:federation": "cd workers/federation && bun run dev",
    "workers:deploy:federation": "cd workers/federation && bun run deploy",
    "workers:typecheck": "cd workers/api && bun run typecheck && cd ../relay && bun run typecheck && cd ../ssr && bun run typecheck && cd ../federation && bun run typecheck"
  },
  "keywords": [
    "nostr",
    "privacy",
    "encryption",
    "activism",
    "organizing",
    "decentralized"
  ],
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "json-schema-to-typescript": "^15.0.4",
    "json-schema-to-zod": "^2.7.0",
    "quicktype": "^23.2.6",
    "quicktype-core": "^23.2.6"
  },
  "dependencies": {
    "minisearch": "^7.2.0"
  }
}
