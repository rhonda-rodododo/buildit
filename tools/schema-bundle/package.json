{
  "name": "@buildit/schema-bundle",
  "version": "1.0.0",
  "description": "Schema bundle generator for BuildIt offline schema distribution",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "schema-bundle": "dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node",
    "generate": "bun run src/cli.ts generate",
    "verify": "bun run src/cli.ts verify"
  },
  "dependencies": {
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.3.3",
    "ajv": "^8.12.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.3.0"
  }
}
