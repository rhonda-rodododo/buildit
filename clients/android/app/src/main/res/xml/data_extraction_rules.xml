<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude all data from cloud backup for security -->
        <exclude domain="root" />
        <exclude domain="file" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="external" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow device-to-device transfer for migration, but exclude sensitive prefs -->
        <include domain="sharedpref" path="." />
        <exclude domain="sharedpref" path="buildit_secure_keys.xml" />
        <exclude domain="sharedpref" path="buildit_linked_identities_secure.xml" />
        <exclude domain="sharedpref" path="buildit_tofu_pins.xml" />
        <exclude domain="database" path="." />
    </device-transfer>
</data-extraction-rules>
